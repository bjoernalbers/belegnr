#!/bin/sh
# belegnr â€” Generate sequential, unique document numbers (Belegnummern) ðŸ“„

export PATH="/bin:/sbin:/usr/bin:/usr/sbin"

# File name of this script (without path).
SCRIPT_NAME="${0##*/}"

# Each Belegnummer starts with this string.
BELEGNR_PREFIX="BE-"

# The first Belegnummer starts with this number.
COUNTER_START=1

# File to store the counter, which is overwritable via environment variable
# BELEGNR_FILE.
BELEGNR_FILE="${BELEGNR_FILE:-${HOME}/.belegnr}"

# Display usage information.
display_usage() {
cat <<EOF
${SCRIPT_NAME} â€” Generate sequential, unique document numbers (Belegnummern) ðŸ“„

Usage: ${SCRIPT_NAME} [OPTIONS]

Options:
  -c  Create new Belegnummer
  -h  Display this help and exit
  -p  Print current Belegnummer
  -r  Reset counter (~/.belegnr) to given value, i.e. -r 1000
EOF
}

# Print warning on stderr.
warn() {
	echo "${SCRIPT_NAME}: $*" >&2
}

# Ask for confirmation.
confirm() {
	printf "%s (y/N): " "$1"
	read -r answer
	case "${answer}" in
		[yY]*)
			return 0
			;;
		*)
			return 1
			;;
	esac
}

# Reset counter.
reset_counter() {
	counter="$1"
	# If file exists, ask for confirmation before reset.
	if [ -f "${BELEGNR_FILE}" ]; then
		confirm "Really reset counter?" || return
	fi
	write_counter "${counter}" && print_belegnr "${counter}"
}

# Create new Belegnummer.
create_belegnr() {
	# If file exists, read and increment number.
	if [ -f "${BELEGNR_FILE}" ]; then
		counter=$(read_counter) || return 1
		counter=$((counter+1))
	# Else start from scratch.
	else
		counter="${COUNTER_START}"
	fi
	write_counter "${counter}" && print_belegnr "${counter}"
}

# Read and validate counter from file.
read_counter() {
	if ! counter=$(cat "${BELEGNR_FILE}" 2> /dev/null); then
		warn "could not read file: ${BELEGNR_FILE}"
		return 1
	fi
	if ! [ "${counter}" -ge 0 ] 2> /dev/null; then
		warn "file contains no valid number: ${BELEGNR_FILE}"
		return 1
	fi
	echo "${counter}"
}

# Write counter to file.
write_counter() {
	counter="$1"
	if ! echo "${counter}" > "${BELEGNR_FILE}"; then
		warn "could not write to file: ${BELEGNR_FILE}"
		return 1
	fi
}

# Print the formatted Belegnummer.
print_belegnr() {
	counter="$1"
	echo "${BELEGNR_PREFIX}${counter}"
}

# Abort, if $HOME is not set.
if [ ! -n "${HOME}" ]; then
	warn "variable HOME not defined or empty"
	exit 1
fi

# Parse options.
while getopts 'chpr:' opt; do
	case "${opt}" in
		c)
			create_belegnr
			exit
			;;
		h)
			display_usage
			exit 0
			;;
		p)
			if [ ! -f "${BELEGNR_FILE}" ]; then
				warn "create Belegnummer first with -c"
				exit 1
			fi
			counter=$(read_counter) || exit 1
			print_belegnr "${counter}"
			exit 0
			;;
		r)
			reset_counter "${OPTARG}"
			exit
			;;
		*)
			display_usage
			exit 1
			;;
	esac
done

# Display usage if no option was selected.
display_usage
